---
import "@fontsource-variable/outfit";
import "../styles/global.css";
import { ModeToggle } from "@/components/ModeToggle";
const { title, description } = Astro.props;
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Egor Miliukov" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title || "Egor Miliukov Developer"}</title>
    <meta
      name="description"
      content={description ||
        "Experienced full-stack developer from Helsinki, Finland. Building scalable production-ready web applications and APIs."}
    />
    <meta name="og:title" content={title || "Egor Miliukov Developer"} />
    <meta
      name="og:description"
      content={description ||
        "Experienced full-stack developer from Helsinki, Finland. Building scalable production-ready web applications and APIs."}
    />
    <meta name="og:image" content="/og-full.jpg" />
    <meta name="og:type" content="website" />
  </head>
  <body>
    <div class="absolute right-4 top-4">
      <ModeToggle client:load />
    </div>
    <slot />
  </body>
</html>
